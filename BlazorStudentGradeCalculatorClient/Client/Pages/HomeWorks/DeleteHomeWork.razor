@page "/deleteHomeWork/{Id:int}"
@inherits DeleteHomeWorkBase

<div class="border" style="width: 50%; font-weight: bold">
    <div class="card-header text-center">
        <h4 class="text-center"><strong>Delete Home Work Details of @HomeWork.StudentName</strong></h4>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Subject Name</th>
                    <th>Subject Score</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Scores)
                {
                    <tr>
                        <td>
                            <h5 class="mt-3">
                                <strong>@item.SubjectName</strong>
                            </h5>
                        </td>
                        <td>
                            <h5>
                                <strong>@item.SubjectScore</strong>
                            </h5>
                        </td>
                        <td>
                            <button type="button" style="font-weight: bold" class="btn btn-danger" @onclick="() => DeleteClick(item)">
                                Delete
                                <i class="fas fa-angle-right right"></i>
                            </button>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <button type="button" style="font-weight: bold" class="btn btn-primary btn-block" @onclick="Cancel">
            Back to List
            <i class="fas fa-angle-right right"></i>
        </button>       
    </div>
</div>


<ConfirmDelete @ref="DeleteConfirmation" ConfirmationChanged="DeleteHomeWork" ConfirmationMessage="@($"Are you sure you want to delete {HomeWork.StudentName}'s Home work' score?")"
               ConfirmationTitle="Examm Score Delete Confirmation" /> 