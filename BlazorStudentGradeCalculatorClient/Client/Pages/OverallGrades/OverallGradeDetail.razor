@page "/overallGradeDetail/{SchoolId}"
@inherits OverallGradeDetailBase

<div class="border">
    <div class="card-header text-center">
  
        <h1>Detail of OverallGrade Scores</h1>

    </div>
    <div class="card-body">
        <table class="table table-bordered">

            <thead>

            </thead>
            <tbody>

                @foreach (var item in OverallGrades)
                {
                    if (OverallGrades[OverallGrades.FindIndex(ind => ind.Equals(item))] == OverallGrades[0])
                    {
                        <tr>
                            <th><a href="@("/listOverallGrades")" style="font-weight: bold">School ID          : @OverallGrades[0].SchoolIdNumber</a></th>
                            <th><a href="@("/listOverallGrades")" style="font-weight: bold">Student Name       : @OverallGrades[0].StudentName</a></th>
                            <th><a href="@("/listOverallGrades")" style="font-weight: bold">Number of Subjects : @OverallGrades[0].NumberOfSubjects</a></th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>Subject</th>
                            <th>Score</th>
                            <th>Grade</th>
                            <th>Action</th>
                        </tr>

                    }
                    <tr>
                        <td>@item.SubjectName</td>
                        <td>@item.SubjectScore</td>
                        <td>@item.SubjectScoreInLetter</td>
                        <td>
                            <a class="btn btn-danger" href="@($"/deleteOverallGrade/{item.OverallGradeID}")" style="font-weight: bold">
                                <i class="oi oi-delete">Delete</i>
                            </a>
                        </td>
                    </tr>
                }

            </tbody>


        </table>
    </div>
    <div class="card-footer">
        <a class="btn btn-primary btn-block" href="@($"/listOverallGrades")" style="font-weight: bold">
            Back to OverallGrade List
        </a>
        <a class="btn btn-primary btn-block" href="@($"/studentList")" style="font-weight: bold">
            Back to Student Overall Score List
        </a>
    </div>
</div>