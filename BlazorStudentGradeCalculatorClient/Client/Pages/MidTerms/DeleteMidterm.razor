@page "/deleteMidterm/{Id:int}"
@inherits DeleteMidtermBase

<h1 class="card-header">Delete MidTerm Score</h1>

<br />

<table>
    <thead>
        <tr>
            <th style="font-weight: bold">Student Id    : @MidTerm.SchoolIdNumber</th>
        </tr>
        <tr>
            <th style="font-weight: bold">Student Name  : @MidTerm.StudentName</th>
        </tr>
        <tr>
            <th style="font-weight: bold">Subject Name  : @MidTerm.SubjectName</th>
        </tr>
        <tr>
            <th style="font-weight: bold">Subject Score : @MidTerm.SubjectScore</th>
        </tr>
        <tr>
            <th style="font-weight: bold">Grade         : @MidTerm.SubjectScoreInLetter</th>
        </tr>
    </thead>
</table>

<button type="button" style="font-weight: bold" class="btn btn-outline-danger mr-1" @onclick="DeleteClick">Delete</button>
<button type="button" style="font-weight: bold" class="btn btn-outline-warning mr-1" @onclick="Cancel">Cancel</button>

<ConfirmDelete @ref="DeleteConfirmation" ConfirmationChanged="DeleteMidTerm" ConfirmationMessage="@($"Are you sure you want to delete {MidTerm.StudentName}'s midTerm's score?")"
               ConfirmationTitle="MidTerm Score Delete Confirmation" /> 