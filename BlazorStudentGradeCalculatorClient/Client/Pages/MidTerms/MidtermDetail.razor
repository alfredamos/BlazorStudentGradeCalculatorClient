@page "/midtermDetail/{SchoolId}"
@inherits MidtermDetailBase

<br />

<h1 class="card-header text-center">Detail of MidTerms Scores</h1>

<br />



<table class="table table-bordered">

    <thead>

    </thead>
    <tbody>

        @foreach (var item in MidTerms)
        {
            if (MidTerms[MidTerms.FindIndex(ind => ind.Equals(item))] == MidTerms[0])
            {
                <tr>
                    <th><a href="@("/listMidterms")" style="font-weight: bold">School ID          : @MidTerms[0].SchoolIdNumber</a></th>
                    <th><a href="@("/listMidterms")" style="font-weight: bold">Student Name       : @MidTerms[0].StudentName</a></th>
                    <th><a href="@("/listMidterms")" style="font-weight: bold">Number of Subjects : @MidTerms[0].NumberOfSubjects</a></th>
                    <th></th>
                </tr>
                <tr>
                    <th>Subject</th>
                    <th>Score</th>
                    <th>Grade</th>
                    <th>Action</th>
                </tr>

            }
            <tr>
                <td>@item.SubjectName</td>
                <td>@item.SubjectScore</td>
                <td>@item.SubjectScoreInLetter</td>
                <td>
                    <a class="btn btn-warning" href="@($"/editMidterm/{item.MidTermID}")" style="font-weight: bold">
                        <i class="oi oi-pencil">Edit</i>
                    </a>
                    <a class="btn btn-danger" href="@($"/deleteMidterm/{item.MidTermID}")" style="font-weight: bold">
                        <i class="oi oi-delete">Delete</i>
                    </a>
                </td>
            </tr>
        }

    </tbody>


</table>
