@page "/deleteExamm/{Id:int}"
@inherits DeleteExammsBase

<h1 class="card-header">Delete Examm Score</h1>

<br />

<table>
    <thead>
        <tr>
            <th style="font-weight: bold">Student Id    : @Examm.SchoolIdNumber</th>
        </tr>
        <tr>
            <th style="font-weight: bold">Student Name  : @Examm.StudentName</th>
        </tr>
        <tr>
            <th style="font-weight: bold">Subject Name  : @Examm.SubjectName</th>
        </tr>
        <tr>
            <th style="font-weight: bold">Subject Score : @Examm.SubjectScore</th>
        </tr>
        <tr>
            <th style="font-weight: bold">Grade         : @Examm.SubjectScoreInLetter</th>
        </tr>
    </thead>
</table>

<button type="button" style="font-weight: bold" class="btn btn-outline-danger mr-1" @onclick="DeleteClick">Delete</button>
<button type="button" style="font-weight: bold" class="btn btn-outline-warning mr-1" @onclick="Cancel">Cancel</button>

<ConfirmDelete @ref="DeleteConfirmation" ConfirmationChanged="DeleteExamm" ConfirmationMessage="@($"Are you sure you want to delete {Examm.StudentName}'s examms' score?")"
               ConfirmationTitle="Examm Score Delete Confirmation" /> 