@page "/deleteExamm/{Id:int}"
@inherits DeleteExammsBase


<div class="border" style="width:50%; font-weight: bold">
    <div class="card-header text-center">
        <h4><strong>Delete Examm Score of @Examm.StudentName</strong></h4>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <td style="font-weight: bold">Student Id    : @Examm.SchoolIdNumber</td>
                </tr>
                <tr>
                    <td style="font-weight: bold">Student Name  : @Examm.StudentName</td>
                </tr>
                <tr>
                    <td style="font-weight: bold">Subject Name  : @Examm.SubjectName</td>
                </tr>
                <tr>
                    <td style="font-weight: bold">Subject Score : @Examm.SubjectScore</td>
                </tr>
                <tr>
                    <td style="font-weight: bold">Grade         : @Examm.SubjectScoreInLetter</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <button class="btn btn-danger btn-block" @onclick="DeleteClick" style="font-weight: bold">
            <i class="oi oi-delete">Delete</i>
        </button>
        <a href="/listExamms" class="btn btn-primary btn-block" style="font-weight: bold">
            Back to List
        </a>
    </div>
</div>

<ConfirmDelete @ref="DeleteConfirmation" ConfirmationChanged="DeleteExamm" ConfirmationMessage="@($"Are you sure you want to delete {Examm.StudentName}'s examms' score?")"
               ConfirmationTitle="Examm Score Delete Confirmation" />
